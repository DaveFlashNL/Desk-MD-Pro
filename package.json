{
  "name": "electronwmd",
  "version": "0.1.3-1.1.1",
  "description": "Electron version of WebMinidisc Pro",
  "main": "dist/main.js",
  "scripts": {
    "build": "./build-renderer.sh && tsc",
    "start": "npm run build && NODE_ENV=development electron ./dist/main.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder -wl --x64 && electron-builder -w --ia32",
    "dist-mac": "npm run build && electron-builder -m"
  },
  "build": {
    "directories": {
      "output": "build",
      "buildResources": "res"
    },
    "artifactName": "${name}-${version}-${os}_${arch}.${ext}",
    "compression": "store",
    "asar": "true",
    "asarUnpack": [
      "./node_modules/netmd-js/**/*",
      "./node_modules/crypto-js/**/*",
      "./node_modules/jconv/**/*"
    ],
    "win": {
      "icon": "./res/icon.ico"
    },
    "linux": {
      "icon": "./res/icon.png"
    },
    "files": [
      "node_modules",
      "dist",
      "renderer",
      "res"
    ]
  },
  "author": "asivery",
  "private": true,
  "dependencies": {
    "@types/electron": "^1.6.10",
    "async-mutex": "^0.3.2",
    "jconv": "^0.1.5",
    "netmd-js": "^3.2.3",
    "typescript": "^4.3.5",
    "webusb": "^2.2.0"
  },
  "devDependencies": {
    "electron": "13.1.8",
    "electron-builder": "^22.11.7"
  }
}
